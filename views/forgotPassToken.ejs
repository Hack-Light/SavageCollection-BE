<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Google fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400&family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <!-- Fonts Awesome -->
    <script src="https://kit.fontawesome.com/fc9346f24c.js" crossorigin="anonymous"></script>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/forgot-password.css" />
    <title>Savage Collections | Login</title>
  </head>
  <body>
    <section id="forgot-password">
      <div class="row">
        <div class="col-lg-5 logo d-flex align-items-center justify-content-center text-center">
          <div>
            <a href="/" class="brand">
              <!-- <img src="#" alt="Brand Logo" /> -->
              SC
            </a>
            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
            <a href="/">Go back to home</a>
          </div>
        </div>
        <div class="col-lg-7 form">
          <form action="/user/forgot-password/<%= token %>" method="POST">
            <div class="text-center mb-5">
              <h4>Enter Your Password</h4>
              <p>Enter A New Password For Your Account</p>
            </div>
            <div class="text-center mb-5">
              <% if ( typeof success === "undefined" ) { %>
                  <p></p>
                  <div class="form-group">
                    <label for="email" class="sr-only">Password</label>
                    <input name="password" type="password" class="form-control" id="password aria-describedby="emailHelp" placeholder="Password">
                  </div>
                  <button type="submit" class="btn btn-lg btn-primary my-4">Submit</button>
              <% } else if ( success === true ) { %>
                <h4 style="color: green;">Succesful</h4>
                <p><%= message %> <%= data.message %> </p>
              <% } else if ( success === false ) { %>
                <h4 style="color: red;">Error</h4>
                <p><%= message %> <%= data.error %> </p>
                <div class="form-group">
                    <label for="email" class="sr-only">Password</label>
                    <input name="password" type="password" class="form-control" id="password aria-describedby="emailHelp" placeholder="Password">
                  </div>
                  <button type="submit" class="btn btn-lg btn-primary my-4">Submit</button>
              <% } %>
            </div>
            <div class="text-center">
              <a href="/">
                <i class="fas fa-chevron-left"></i> &nbsp Back to Home
              </a>
            </div>
          </form>
        </div>
      </div>
    </section>
    
    
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/jquery.js"></script>
    <script src="/js/popper.js"></script>
  </body>
</html>