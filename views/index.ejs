    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
      integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
  
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
      integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/footer.css">
    <!-- <link rel="stylesheet" href="css/savage.css"> -->
    <link rel="stylesheet" href="/css/homepage.css" />
    <link rel="stylesheet" href="/css/user.css" />
  
  
    <title>Savage Collections | Home</title>
  </head>

  <body>
    <header class="mb-3">
      <nav class="navbar navbar-expand-md navbar-dark fixed-top shadow-lg py-3">
        <!-- Brand -->
        <a class="navbar-brand text-uppercase" id="logo" href="/">sc</a>

        <!-- Toggler/collapsibe Button -->
        <button
          class="navbar-toggler"
          type="button"
          data-toggle="collapse"
          data-target="#collapsibleNavbar"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Navbar links -->
        <div
          class="collapse navbar-collapse justify-content-end"
          id="collapsibleNavbar"
        >
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link text-uppercase text-light" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-uppercase text-light" href="/posts">Views</a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link text-uppercase text-light"
                href="/user/register"
                >Sign Up</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link text-uppercase text-light" href="/user/login"
                >Login</a
              >
            </li>
          </ul>
        </div>
      </nav>
    </header>

    <main class="mt-5">
      <section
        id="welcome"
        class="d-flex justify-content-center align-items-center"
      >
        <div class="justify-content-center">
          
          <h1 class="text-uppercase text-center text-white">
            savage collections
          </h1>
          <p class="text-uppercase text-center text-white">
            Funny, savage replies
          </p>
          <p class="text-capitalize text-center">
            <a href="/posts" class="btn text-white px-4 py-2" id="btn-see"
              ><i class="fa fa-paw mr-2"></i>see savages</a
            >
          </p>
        </div>
      </section>

      <section id="how-it-works" class="mt-5 justify-content-center">
        <h3 class="text-uppercase text-dark text-center mb-5">how it works</h3>
        <div class="justify-content-center box text-center container">
          <div class="card shadow-lg py-5 bg-warning">
            <p lass="card-text">1. Upload your Savage photo of choice.</p>
          </div>
          <div class="card shadow-lg py-5 bg-warning">
            <p lass="card-text">2. Get your points.</p>
          </div>
          <div class="card shadow-lg py-5 bg-warning">
            <p lass="card-text">3. Get value worth of points.</p>
          </div>
          <div class="card shadow-lg py-5 bg-warning">
            <p lass="card-text">4. Claim your rewards.</p>
          </div>
          <div class="card shadow-lg py-5 bg-warning">
            <p lass="card-text">5. Get paid.</p>
          </div>
        </div>
      </section>

      <section id="images-display" class="mt-5 justify-content-center">
        <h3 class="text-uppercase text-dark text-center mb-5">
          our collections
        </h3>
        <div class="posts">
          <% for (var i = 0; i < data.length; i++) { %> <%
          if(data[i].image_url != "") { %> <% console.log(data[i].image_url)
          %>
          <div class="post">
            <img
              src="<%= data[i].image_url %>"
              height="250px"
              width="100px"
            />
            <div class="overlay">
              <i class="fa fa-info" title="details"></i>
              <i class="fa fa-trash" title="delete"></i>
            </div>
          </div>
          <% } %> <% } %>
        </div>
        <div class="grid-box container-fluid justify-content-center px-sm-5">
          
          
        <div class="modal fade" id="myModal-6">
          <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
              <div class="modal-body">
                <img
                  src="/images/dada-awu.jpeg"
                  class="img-fluid img-rescale"
                  alt=""
                />
              </div>
            </div>
          </div>
        </div>

        <div class="text-center mt-5">
          <a
            href="/posts"
            class="btn px-4 py-2 text-capitalize text-white"
            id="btn-view"
            >view more</a
          >
        </div>
      </section>

      

          <!-- Left and right controls -->
          <a class="carousel-control-prev" href="#demo" data-slide="prev">
            <span class="carousel-control-prev-icon"></span>
          </a>
          <a class="carousel-control-next" href="#demo" data-slide="next">
            <span class="carousel-control-next-icon"></span>
          </a>
        </div>
      </section>
    </main>

    <footer class="mt-5">
      <div
        class="text-center pt-4 pb-2 justify-content-center align-items-center"
      >
        <p class="text-uppercase text-white">&copy;savage collections 2020.</p>
        <p class="text-capitalize text-white">All rights reserved.</p>
      </div>
    </footer>

    <script src="/js/homepage.js"></script>
    <script src="/js/jquery.js"></script>
    <script src="/js/popper.js"></script>
    <script src="/js/bootstrap.min.js"></script> 
